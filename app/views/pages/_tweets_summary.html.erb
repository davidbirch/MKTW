<h3 class="menu">Tweets</h3>
<p>Record Count: <%= @tweets.count %></p>
<p>Breakdown by sentiment</p>
<ul>
<% @tweet_sentiment_count.each do |count_row| %>
<li><%= count_row.sentiment %>: <%= count_row.sentiment_count %></li>
<% end %>
<li>Total: <%= @tweets.count %></p>
</ul>
<p>Breakdown by day</p>
<div class="row">
  <div class="span4">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Hour</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
      <% @tweet_daily_count.each do |count_row| %>
        <tr>
          <td><%= count_row.tweet_by_day %></td>
          <td><%= count_row.tweet_by_hour %></td>
          <td><%= count_row.tweet_daily_count %></td>
        </tr>
      <% end %>
        <tr class="total">
          <td colspan="2" >Total</td>
          <td><%= @tweets.count %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="span8">
  </div>
</div>
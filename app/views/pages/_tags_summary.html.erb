<h3>Tags</h3>
<% @tag_count.each do |count_row| %>
  <p> Record Count: <%= count_row["tag_count"] %></p>
<% end %>
<h4>Top tag count</h4>
<div class="row">
  <div class="span4">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Tag</th>
          <th>Sentiment</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
      <% @top_tags_count.each do |count_row| %>
        <tr>
          <td><%= count_row.tag_name %></td>
          <td><%= count_row.sentiment %></td>
          <td><%= count_row.tag_count %></td>
        </tr>
      <% end %>
        <tr class="total">
          <td colspan="2" >Total</td>
          <% @tag_count.each do |count_row| %>
          <td><%= count_row["tag_count"] %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="span8">
  </div>
</div>
